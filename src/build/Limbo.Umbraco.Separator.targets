<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <LimboUmbracoSeparatorContentFilesPath>$(MSBuildThisFileDirectory)..\content\App_Plugins\Limbo.Umbraco.Separator\**\*.*</LimboUmbracoSeparatorContentFilesPath>
  </PropertyGroup>

  <Target Name="CopyLimboUmbracoSeparatorAssets" BeforeTargets="Build">
    <ItemGroup>
      <LimboUmbracoSeparatorContentFiles Include="$(LimboUmbracoSeparatorContentFilesPath)" />
    </ItemGroup>
    <Message Text="Copying Limbo.Umbraco.Separator files: $(LimboUmbracoSeparatorContentFilesPath) - #@(LimboUmbracoSeparatorContentFiles->Count()) files"  Importance="high" />
    <Copy
      SourceFiles="@(LimboUmbracoSeparatorContentFiles)"
      DestinationFiles="@(LimboUmbracoSeparatorContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Limbo.Umbraco.Separator\%(RecursiveDir)%(Filename)%(Extension)')"
      SkipUnchangedFiles="true" />
  </Target>

  <Target Name="ClearLimboUmbracoSeparatorAssets" BeforeTargets="Clean">
    <ItemGroup>
      <LimboUmbracoSeparatorDir Include="$(MSBuildProjectDirectory)\App_Plugins\Limbo.Umbraco.Separator\" />
    </ItemGroup>
    <Message Text="Clear old Limbo.Umbraco.Separator files"  Importance="high" />
    <RemoveDir Directories="@(LimboUmbracoSeparatorDir)"  />
  </Target>

</Project>